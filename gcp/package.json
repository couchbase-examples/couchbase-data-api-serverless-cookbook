{
  "name": "gcp",
  "version": "1.0.0",
  "type": "module",
  "description": "GCP Cloud functions for Couchbase data api",
  "main": "index.js",
  "babel": {
    "env": {
      "test": {
        "plugins": ["@babel/plugin-transform-modules-commonjs"]
      }
    }
  },
  "scripts": {
    "deploy-gcp-cloud-function": "env-cmd -f .env node scripts/deploy-cloud-function.js",
    "deploy-api-gateway": "env-cmd -f .env node scripts/deploy-api-gateway.js",
    "test": "env-cmd -f .env jest",
    "test:integration": "env-cmd -f .env jest --testPathPattern=tests/integration"
  },
  "author": "Prajwal Pai",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "env-cmd": "^10.1.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
